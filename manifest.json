{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "GW2 Price Tracker",
    "version": "1.0.0",
    "minimum-overwolf-version":"0.77.10",
    "author": "Martin Ashby",
    "icon": "Icons/icon.png",
    "icon_gray": "Icons/icon.png",
    "description": "Get notified when your items reach the right price!"
  },
  "data": {
    "start_window": "WidgetWindow",
    "windows": {
      "WidgetWindow": {
        "file": "Files/WidgetWindow.html",
        "transparent": true,
        "resizable": false,
        "size": {"width": 200, "height": 100},
        "externally_connectable":  {
          "matches": [
            "https://api.guildwars2.com*"
          ]
        }
      },
      "ListWindow": {
        "file": "Files/ListWindow.html",
        "transparent": true,
        "resizable": true,
        "size": {"width": 350, "height": 500},
        "externally_connectable":  {
          "matches": [
            "https://api.guildwars2.com*"
          ]
        }
      },
      "NotificationSettingWindow": {
        "file": "Files/NotificationSettingWindow.html",
        "transparent": true,
        "resizable": true,
        "size": {"width": 350, "height": 500},
        "externally_connectable":  {
          "matches": [
            "https://api.guildwars2.com*"
          ]
        }
      },
      "NotificationWindow": {
        "file": "Files/NotificationWindow.html",
        "transparent": true,
        "resizable": true,
        "size": {"width": 350, "height": 500},
        "externally_connectable":  {
          "matches": [
            "https://api.guildwars2.com*"
          ]
        }
      },
      "SearchWindow": {
        "file": "Files/SearchWindow.html",
        "transparent": true,
        "resizable": true,
        "size": {"width": 300, "height": 500},
        "externally_connectable":  {
          "matches": [
            "https://api.guildwars2.com*"
          ]
        }
      }
    }
  }
}
