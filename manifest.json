{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "GW2 Price Tracker",
    "version": "1.0.0",
    "minimum-overwolf-version":"0.77.10",
    "author": "Martin Ashby",
    "icon": "Icons/icon.png",
    "icon_gray": "Icons/icon.png",
    "description": "Get notified when your items reach the right price!"
  },
  "data": {
    "start_window": "MainWindow",
    "windows": {
      "MainWindow": {
        "file": "Files/index.html",
        "transparent": true,
        "resizable": false,
        "size": {"width": 450, "height": 450},
        "min_size": {"width": 450, "height": 450},
        "max_size": {"width": 600, "height": 500},
        "externally_connectable":  {
          "matches": [
            "https://api.guildwars2.com*",
            "http://localhost:8080*"
          ]
        }
      }
    }
  }
}
